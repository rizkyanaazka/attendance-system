<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefHeight="700" prefWidth="1000" styleClass="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.attendance.controller.AdminDashboardController">
    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60" spacing="20.0" style="-fx-background-color: #800000;" styleClass="header">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <children>
                <Label fx:id="welcomeLabel" styleClass="welcome-label" text="Selamat Datang, Admin" textFill="WHITE">
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="currentTimeLabel" styleClass="time-label" text="--:--:--">
                    <font>
                        <Font name="System" size="14" />
                    </font>
                </Label>
                <Button fx:id="logoutButton" onAction="#handleLogout" styleClass="logout-button" text="Logout" />
            </children>
        </HBox>
    </top>

    <!-- Sidebar Navigation -->
    <left>
        <VBox maxWidth="200" prefHeight="638.0" prefWidth="157.0" spacing="5" style="-fx-background-color: #FFD700;" styleClass="sidebar">
            <padding>
                <Insets bottom="20" left="10" right="10" top="20" />
            </padding>
            <children>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../picture/go-stis.png" />
                    </image>
                </ImageView>
                <Button fx:id="btnTambahTentor" alignment="CENTER_LEFT" onAction="#showTambahTentor" prefWidth="180" styleClass="sidebar-button" text="📚 Tambah Tentor" />
                <Button fx:id="btnApprovalSiswa" alignment="CENTER_LEFT" onAction="#showApprovalSiswa" prefWidth="180" styleClass="sidebar-button" text="✅ Approval Siswa" />
                <Button fx:id="btnJadwal" alignment="CENTER_LEFT" onAction="#showJadwal" prefWidth="180" styleClass="sidebar-button" text="📅 Buat Jadwal" textFill="#0d0d0d" />
                <Button fx:id="btnLaporan" alignment="CENTER_LEFT" onAction="#showLaporan" prefWidth="180" styleClass="sidebar-button" text="📊 Laporan Kehadiran" />
                <Button fx:id="buttonRefresh" alignment="CENTER_LEFT" onAction="#handleRefresh" prefWidth="180" styleClass="sidebar-button" text="🔄 Refresh" />
            </children>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Tambah Tentor Panel -->
            <VBox fx:id="tambahTentorPanel" alignment="CENTER" maxWidth="500" spacing="20" style="-fx-background-color: #FFFFF0;" styleClass="content-panel" visible="true">
                <children>
                    <Label styleClass="panel-title" text="Tambah Tentor Baru">
                        <font>
                            <Font name="Bell MT" size="18.0" />
                        </font>
                    </Label>

                    <!-- Profile Image Section -->
                    <VBox alignment="CENTER" spacing="10">
                        <ImageView fx:id="tentorImageView" fitHeight="120" fitWidth="120" preserveRatio="true" styleClass="profile-image">
                            <image>
                                <Image url="@../picture/avatar.png" />
                            </image>
                        </ImageView>
                        <Button onAction="#handleSelectTentorImage" style="-fx-background-color: #2196F3;" styleClass="secondary-button" text="Pilih Foto" />
                    </VBox>

                    <VBox maxWidth="400" spacing="15">
                        <TextField fx:id="tentorNameField" prefHeight="40" promptText="Nama Lengkap Tentor" styleClass="text-field" />
                        <ComboBox fx:id="tentorSubjectField" promptText="Mata Pelajaran Yang di Ampu" styleClass="text-field" />
                        <Button alignment="CENTER" contentDisplay="CENTER" onAction="#handleAddTentor" prefHeight="30.0" style="-fx-background-color: #2196F3;" styleClass="primary-button" text="Tambah Tentor" textAlignment="CENTER">
                    <VBox.margin>
                            <Insets left="120.0" />
                    </VBox.margin></Button>
                    </VBox>
                </children>
            </VBox>

            <!-- Jadwal Panel with ScrollPane -->
            <VBox fx:id="jadwalPanel" alignment="CENTER" maxWidth="500" spacing="20" styleClass="content-panel" visible="false">
                <children>
                    <Label styleClass="panel-title" text="Buat Jadwal Baru">
                        <font>
                            <Font name="System Bold" size="18" />
                        </font>
                    </Label>
                    <!-- ScrollPane untuk form -->
                    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                        <content>
                            <!-- Form Fields - Vertical Layout -->
                            <VBox maxWidth="400" spacing="15">
                                <padding>
                                    <Insets bottom="10" left="10" right="10" top="10" />
                                </padding>
                                <!-- Mata Pelajaran -->
                                <VBox spacing="5">
                                    <Label styleClass="form-label" text="Mata Pelajaran:">
                                        <font>
                                            <Font name="System Bold" size="14" />
                                        </font>
                                    </Label>
                                    <ComboBox fx:id="subjectComboBox" prefHeight="40" promptText="Pilih mata pelajaran" styleClass="text-field" />
                                </VBox>

                                <!-- Nama Tentor -->
                                <VBox spacing="5">
                                    <Label styleClass="form-label" text="Nama Tentor:">
                                        <font>
                                            <Font name="System Bold" size="14" />
                                        </font>
                                    </Label>
                                    <ComboBox fx:id="teacherComboBox" prefHeight="40" promptText="Pilih nama tentor" styleClass="text-field" />
                                </VBox>

                                <!-- Nama Kelas -->
                                <VBox spacing="5">
                                    <Label styleClass="form-label" text="Nama Kelas:">
                                        <font>
                                            <Font name="System Bold" size="14" />
                                        </font>
                                    </Label>
                                    <ComboBox fx:id="classComboBox" prefHeight="40" promptText="Pilih kelas" styleClass="text-field" />
                                </VBox>
                                <!-- Ruangan -->
                                <VBox spacing="5">
                                    <Label styleClass="form-label" text="Ruangan:">
                                        <font>
                                            <Font name="System Bold" size="14" />
                                        </font>
                                    </Label>
                                    <TextField fx:id="roomField" prefHeight="40" promptText="Masukkan ruangan" styleClass="text-field" />
                                </VBox>
                                <!-- Tanggal -->
                                <VBox spacing="5">
                                    <Label styleClass="form-label" text="Tanggal:">
                                        <font>
                                            <Font name="System Bold" size="14" />
                                        </font>
                                    </Label>
                                    <DatePicker fx:id="datePicker" prefHeight="40" promptText="Pilih tanggal" styleClass="text-field" />
                                </VBox>

                                <!-- Waktu Mulai -->
                                <VBox spacing="5">
                                    <Label styleClass="form-label" text="Waktu Mulai:">
                                        <font>
                                            <Font name="System Bold" size="14" />
                                        </font>
                                    </Label>
                                    <ComboBox fx:id="startTimeComboBox" prefHeight="40" promptText="Pilih waktu mulai" styleClass="text-field" />
                                </VBox>

                                <!-- Waktu Selesai -->
                                <VBox spacing="5">
                                    <Label styleClass="form-label" text="Waktu Selesai:">
                                        <font>
                                            <Font name="System Bold" size="14" />
                                        </font>
                                    </Label>
                                    <ComboBox fx:id="endTimeComboBox" prefHeight="40" promptText="Pilih waktu selesai" styleClass="text-field" />
                                </VBox>
                                <!-- Tombol Buat Jadwal -->
                                <Button onAction="#handleCreateSchedule" prefHeight="45" styleClass="primary-button" text="Buat Jadwal">
                                    <VBox.margin>
                                        <Insets top="10" />
                                    </VBox.margin>
                                </Button>
                            </VBox>
                        </content>
                    </ScrollPane>
                </children>
            </VBox>

            <!-- Laporan Panel -->
            <VBox fx:id="laporanPanel" alignment="CENTER" maxWidth="800" spacing="20" styleClass="content-panel" visible="false">
                <children>
                    <Label styleClass="panel-title" text="Laporan Kehadiran">
                        <font>
                            <Font name="System Bold" size="18" />
                        </font>
                    </Label>
                    <HBox alignment="CENTER" spacing="10">
                        <TextField fx:id="scheduleIdField" prefHeight="40" prefWidth="200" promptText="Masukkan ID Jadwal" styleClass="text-field" />
                        <Button onAction="#handleViewAttendanceReport" prefHeight="40" styleClass="primary-button" text="Lihat Laporan" />
                    </HBox>
                    <TableView fx:id="attendanceTable" prefHeight="400" styleClass="table-view">
                        <columns>
                            <TableColumn fx:id="nameColumn" prefWidth="200" text="Nama Siswa" />
                            <TableColumn fx:id="statusColumn" prefWidth="150" text="Status Kehadiran" />
                            <TableColumn fx:id="dateColumn" prefWidth="150" text="Tanggal" />
                        </columns>
                        <placeholder>
                            <Label text="Pilih ID jadwal untuk melihat laporan kehadiran" />
                        </placeholder>
                    </TableView>
                </children>
            </VBox>

            <!-- Approval Siswa Panel -->
            <VBox fx:id="approvalSiswaPanel" alignment="TOP_CENTER" maxWidth="900" spacing="20" styleClass="content-panel" visible="false">
                <children>
                    <Label styleClass="panel-title" text="Approval Registrasi Siswa">
                        <font>
                            <Font name="System Bold" size="18" />
                        </font>
                    </Label>

                    <!-- Statistik Section -->
                    <HBox alignment="CENTER" spacing="40" styleClass="stats-container">
                        <VBox alignment="CENTER" spacing="5" styleClass="stat-box">
                            <Label styleClass="stat-label" text="Pending">
                                <font>
                                    <Font name="System Bold" size="12" />
                                </font>
                            </Label>
                            <Label fx:id="pendingCountLabel" styleClass="stat-number" text="0">
                                <font>
                                    <Font name="System Bold" size="24" />
                                </font>
                            </Label>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5" styleClass="stat-box">
                            <Label styleClass="stat-label" text="Approved">
                                <font>
                                    <Font name="System Bold" size="12" />
                                </font>
                            </Label>
                            <Label fx:id="approvedCountLabel" styleClass="stat-number" text="0">
                                <font>
                                    <Font name="System Bold" size="24" />
                                </font>
                            </Label>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5" styleClass="stat-box">
                            <Label styleClass="stat-label" text="Rejected">
                                <font>
                                    <Font name="System Bold" size="12" />
                                </font>
                            </Label>
                            <Label fx:id="rejectedCountLabel" styleClass="stat-number" text="0">
                                <font>
                                    <Font name="System Bold" size="24" />
                                </font>
                            </Label>
                        </VBox>
                        <Button onAction="#handleRefreshApprovalData" styleClass="secondary-button" text="🔄 Refresh" />
                    </HBox>
                    <Separator />

                    <!-- ScrollPane untuk konten yang bisa di-scroll -->
                    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                        <content>
                            <VBox spacing="20">
                                <padding>
                                    <Insets bottom="10" left="10" right="10" top="10" />
                                </padding>

                                <!-- Tabel Siswa Pending -->
                                <VBox spacing="15">
                                    <Label styleClass="section-title" text="Siswa Menunggu Approval:">
                                        <font>
                                            <Font name="System Bold" size="14" />
                                        </font>
                                    </Label>
                                    <TableView fx:id="pendingStudentsTable" prefHeight="250" styleClass="table-view">
                                        <columns>
                                            <TableColumn fx:id="pendingNameColumn" prefWidth="180" text="Nama Lengkap" />
                                            <TableColumn fx:id="pendingEmailColumn" prefWidth="200" text="Email" />
                                            <TableColumn fx:id="pendingNimColumn" prefWidth="100" text="NIM" />
                                            <TableColumn fx:id="pendingClassColumn" prefWidth="120" text="Kelas" />
                                        </columns>
                                        <placeholder>
                                            <Label text="Tidak ada siswa yang menunggu approval" />
                                        </placeholder>
                                    </TableView>

                                    <!-- Action Buttons untuk Pending Students -->
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                        <Button onAction="#handleApproveStudent" prefHeight="35" styleClass="success-button" text="✅ Approve" />
                                        <Button onAction="#handleRejectStudent" prefHeight="35" styleClass="danger-button" text="❌ Reject" />
                                    </HBox>
                                </VBox>

                                <Separator />

                                <!-- Pindah Kelas Siswa yang Sudah Approved -->
                                <VBox spacing="15">
                                    <Label styleClass="section-title" text="Pindah Kelas Siswa:">
                                        <font>
                                            <Font name="System Bold" size="14" />
                                        </font>
                                    </Label>
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                        <Label styleClass="form-label" text="Siswa:">
                                            <font>
                                                <Font name="System Bold" size="12" />
                                            </font>
                                        </Label>
                                        <ComboBox fx:id="approvedStudentsCombo" prefWidth="200" promptText="Pilih siswa..." styleClass="combo-box" />
                                        <Label styleClass="form-label" text="Kelas Baru:">
                                            <font>
                                                <Font name="System Bold" size="12" />
                                            </font>
                                        </Label>
                                        <ComboBox fx:id="newClassCombo" editable="true" prefWidth="150" promptText="Pilih kelas..." styleClass="combo-box" />
                                        <Button onAction="#handleUpdateStudentClass" prefHeight="35" styleClass="warning-button" text="🔄 Update Kelas" />
                                    </HBox>
                                </VBox>
                            </VBox>
                        </content>
                    </ScrollPane>
                </children>
            </VBox>
        </StackPane>
    </center>

    <stylesheets>
        <URL value="@../css/style.css" />
    </stylesheets>
</BorderPane>
